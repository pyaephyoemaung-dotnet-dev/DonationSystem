<div class="p-4 border-t space-y-6">
    <div class="bg-white shadow-md rounded-lg p-6">
        <h2 class="text-xl font-semibold text-gray-700">Create a New Post</h2>

        <form method="POST" action="/Post/Create" enctype="multipart/form-data" class="space-y-4">
            <!-- User Info -->
            <div class="flex items-center space-x-3">
                <img src="user-profile.jpg" class="w-12 h-12 rounded-full" alt="User">
                <div>
                    <h4 class="font-semibold text-gray-800">User Name</h4>
                    <p class="text-gray-500 text-sm">Just now</p>
                </div>
            </div>

            <!-- Post Type -->
            <div>
                <label class="block text-gray-600 text-sm font-medium">Post Type</label>
                <select name="type" class="w-full mt-1 p-2 border rounded-lg text-gray-700 focus:ring-2 focus:ring-blue-400">
                    <option value="general">General</option>
                    <option value="announcement">Announcement</option>
                    <option value="event">Event</option>
                </select>
            </div>

            <!-- Description -->
            <div>
                <label class="block text-gray-600 text-sm font-medium">Description</label>
                <textarea name="description" rows="4" placeholder="What's on your mind?" class="w-full mt-1 p-2 border rounded-lg text-gray-700 focus:ring-2 focus:ring-blue-400"></textarea>
            </div>

            <!-- Image Upload -->
            <div>
                <label class="block text-gray-600 text-sm font-medium">Upload Image</label>
                <input type="file" name="postImage" class="w-full mt-1 border rounded-lg p-2 text-gray-700 focus:ring-2 focus:ring-blue-400">
            </div>

            <!-- Submit Button -->
            <div class="flex justify-end">
                <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 transition">Post</button>
            </div>
        </form>
    </div>
</div>
