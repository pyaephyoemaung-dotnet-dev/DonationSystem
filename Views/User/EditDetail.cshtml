@model SignupModel
@{
    ViewData["Title"] = "Details";
}
<section class="flex min-h-full flex-col justify-center px-6 mt-3 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-sm">
        <img class="mx-auto h-10 w-auto" src="@Model.profile" alt="">
        <h2 class="mt-3 text-center text-2xl font-bold tracking-tight text-white">Details</h2>
    </div>

    <div class="mt-3 sm:mx-auto sm:w-full sm:max-w-sm rounded-md p-6 bg-gray-800">
        <form class="space-y-6" action="/User/UpdateDetail/@Model.userId" method="POST" enctype="multipart/form-data">
            <div>
                <label class="block text-white text-sm font-medium">Profile</label>
                <input type="file" name="profile" value="@Model.profile" class="w-full mt-1 border rounded-lg p-2 text-white focus:ring-2 focus:ring-blue-400">
            </div>

            <div>
                <label for="email" class="block text-sm font-medium text-white">Name</label>
                <div class="mt-2">
                    <input type="text" name="name" value="@Model.name" required
                           class="block w-full rounded-md border border-gray-300 bg-white px-3 py-2 text-base text-gray-900 placeholder-gray-400 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm">
                </div>
            </div>

            <div>
                <label for="email" class="block text-sm font-medium text-white">Email address</label>
                <div class="mt-2">
                    <input type="text" name="email" value="@Model.email" required
                           class="block w-full rounded-md border border-gray-300 bg-white px-3 py-2 text-base text-gray-900 placeholder-gray-400 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm">
                </div>
            </div>

            <div>
                <label for="email" class="block text-sm font-medium text-white">Phone</label>
                <div class="mt-2">
                    <input type="text" name="phone" value="@Model.phone" required
                           class="block w-full rounded-md border border-gray-300 bg-white px-3 py-2 text-base text-gray-900 placeholder-gray-400 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm">
                </div>
            </div>

            
                        <select name="role" hidden
                                >
                            <option value="@Model.role">@Model.role</option>
                            

                        </select>
                        
                    

                        <select name="type" hidden
                                >
                            <option value="@Model.type">@Model.type</option>
                        </select>
                        
                  
           

            <div>
                <label for="email" class="block text-sm font-medium text-white">Address</label>
                <div class="mt-2">
                    <input type="text" name="address" value="@Model.address" required
                           class="block w-full rounded-md border border-gray-300 bg-white px-3 py-2 text-gray-900  placeholder-gray-400 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm">
                </div>
            </div>

           
                    <input type="text" hidden name="password" value="@Model.password">
              

            <div class="py-3 flex item-center gap-3">
                <a href="/User/Index/@Model.userId"
                   class="flex-1 text-center bg-gray-500 text-white font-semibold py-2 mx-5 px-4 rounded-lg hover:bg-gray-600 transition duration-300">
                    Cancel
                </a>
                <button type="submit"
                        class="flex-1 text-center rounded-md bg-indigo-600 px-3 py-2 text-sm leading-6 font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:ring-2 focus-visible:ring-indigo-600 focus-visible:ring-offset-2">
                    Edit your details
                </button>
            </div>
        </form>
    </div>
</section>