@model SignupModel

@{
    ViewData["Title"] = "Make a Donation";
}

<div class="max-w-lg mx-auto mt-10 bg-white shadow-lg rounded-lg p-6">
    <h2 class="text-2xl font-semibold text-gray-700 text-center">@Model.name</h2>

    <form action="/User/Save/@Model.userId" method="post" class="mt-4">
        <div class="mb-6">
            <label for="donorName" class="block text-gray-700 font-medium">Name</label>
            <input type="text"  name="DonorName"
                   class="w-full px-4 py-2 mt-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none">
            <span id="donorNameError" class="text-red-500 text-sm"></span>
        </div>

        <div class="mb-6">
            <label for="email" class="block text-gray-700 font-medium">Email</label>
            <input type="email"  name="Email"
                   class="w-full px-4 py-2 mt-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none">
            <span id="emailError" class="text-red-500 text-sm"></span>
        </div>

        <div class="mb-6">
            <label for="email" class="block text-gray-700 font-medium">Phone</label>
            <input type="text"  name="phone"
                   class="w-full px-4 py-2 mt-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none">
            <span id="emailError" class="text-red-500 text-sm"></span>
        </div>
        <div class="mb-6">
            <label for="email" class="block text-gray-700 font-medium">Address</label>
            <input type="text" name="address"
                   class="w-full px-4 py-2 mt-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none">
            <span id="emailError" class="text-red-500 text-sm"></span>
        </div>

        <div class="mb-6">
            <label for="amount" class="block text-gray-700 font-medium">Amount ($)</label>
            <input type="number"  name="Amount" step="0.01"
                   class="w-full px-4 py-2 mt-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none">
            <span id="amountError" class="text-red-500 text-sm"></span>
        </div>

        <div class="py-3 flex item-center gap-3">
            <a href="/User/Index/@Model.userId"
               class="flex-1 text-center bg-gray-500 text-white font-semibold py-2 mx-5 px-4 rounded-lg hover:bg-gray-600 transition duration-300">
                Cancel
            </a>
            <button type="submit"
                    class="flex-1 text-center rounded-md bg-indigo-600 px-3 py-2 text-sm leading-6 font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:ring-2 focus-visible:ring-indigo-600 focus-visible:ring-offset-2">
                Save
            </button>
        </div>
    </form>
</div>
