@model Campain

@{
    ViewData["Title"] = "Donations";
}

<div class="max-w-4xl mx-auto mt-10">
    <h2 class="text-2xl font-semibold text-white text-center">@Model.signupModel.name</h2>

    <div class="flex justify-between">
        <a href="/User/Index/@Model.signupModel.userId" class="text-gray-600 hover:text-blue-500">Back</i></a>
        <a href="/User/Create/@Model.signupModel.userId" class="text-gray-600 hover:text-blue-500"><i class="fa-regular fa-pen-to-square"></i></a>
    </div>

    <div class="mt-6 bg-white shadow-lg rounded-lg p-6">
        <table class="w-full border-collapse">
            <thead>
                <tr class="bg-gray-200 text-gray-700">
                    <th class="p-2">Name</th>
                    <th class="p-2">Email</th>
                    <th class="p-2">Phone</th>
                    <th class="p-2">Address</th>
                    <th class="p-2">Amount</th>
                    <th class="p-2">Date</th>
                    <th class="p-2"></th>
                </tr>
            </thead>    
                <tbody>
                    @foreach (var donation in Model.donation!)
                    {
                        <tr class="border-b text-center">
                            <td class="p-2">@donation.DonorName</td>
                            <td class="p-2">@donation.Email</td>
                            <td class="p-2">@donation.phone</td>
                            <td class="p-2">@donation.address</td>
                            <td class="p-2 text-green-500 font-bold">$@donation.Amount</td>
                            <td class="p-2">@donation.DonationDate.ToShortDateString()</td>
                            <td class="p-2">
                                <a href="/User/DeleteList/@donation.userId" class="text-gray-600 hover:text-red-500"><i class="fa-solid fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
        </table>
    </div>
</div>
