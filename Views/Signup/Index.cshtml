@{
    ViewData["Title"] = "Signup";
}
<section class="flex min-h-full flex-col justify-center px-6 mt-3 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-sm">
        <img class="mx-auto h-10 w-auto" src="./uploads/1060-removebg-preview.png" alt="">
        <h2 class="mt-3 text-center text-2xl font-bold tracking-tight text-white">Welcome to KanLatt</h2>
    </div>

    <div class="mt-3 sm:mx-auto sm:w-full sm:max-w-sm rounded-md p-6 bg-gray-800">
        <form class="space-y-6" action="/Signup/Create" method="POST" enctype="multipart/form-data">
            <div>
                <label class="block text-white text-sm font-medium">Profile</label>
                <input type="file" name="profile" class="w-full mt-1 border rounded-lg p-2 text-white focus:ring-2 focus:ring-blue-400">
            </div>

            <div>
                <label for="email" class="block text-sm font-medium text-white">Name</label>
                <div class="mt-2">
                    <input type="text" name="name" required
                           class="block w-full rounded-md border border-gray-300 bg-white px-3 py-2 text-base text-gray-900 placeholder-gray-400 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm">
                </div>
            </div>

            <div>
                <label for="email" class="block text-sm font-medium text-white">Email address</label>
                <div class="mt-2">
                    <input type="text" name="email"  required
                           class="block w-full rounded-md border border-gray-300 bg-white px-3 py-2 text-base text-gray-900 placeholder-gray-400 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm">
                </div>
            </div>

            <div>
                <label for="email" class="block text-sm font-medium text-white">Phone</label>
                <div class="mt-2">
                    <input type="text" name="phone" required
                           class="block w-full rounded-md border border-gray-300 bg-white px-3 py-2 text-base text-gray-900 placeholder-gray-400 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm">
                </div>
            </div>

            <div class="flex items-center justify-between">
                <div class="sm:col-span-3">
                    <label for="country" class="block text-sm font-medium text-white">Role</label>
                    <div class="mt-2 grid grid-cols-1">
                        <select name="role"
                                class="col-start-1 row-start-1 w-full appearance-none rounded-md border border-gray-300 bg-white py-2 pr-10 pl-3 text-base text-gray-900 placeholder-gray-400 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm">
                            <option value="admin">Admin</option>
                            <option value="page">Page</option>
                            <option value="user">User</option>
                        </select>
                        <svg class="pointer-events-none col-start-1 row-start-1 mr-2 h-5 w-5 self-center justify-self-end text-gray-500 sm:h-4 sm:w-4"
                             viewBox="0 0 16 16" fill="currentColor" aria-hidden="true" data-slot="icon">
                            <path fill-rule="evenodd"
                                  d="M4.22 6.22a.75.75 0 0 1 1.06 0L8 8.94l2.72-2.72a.75.75 0 1 1 1.06 1.06l-3.25 3.25a.75.75 0 0 1-1.06 0L4.22 7.28a.75.75 0 0 1 0-1.06Z"
                                  clip-rule="evenodd" />
                        </svg>
                    </div>
                </div>

                <div class="sm:col-span-3">
                    <label for="country" class="block text-sm font-medium text-white">Type</label>
                    <div class="mt-2 grid grid-cols-1">
                        <select name="type" 
                                class="col-start-1 row-start-1 w-full appearance-none rounded-md border border-gray-300 bg-white py-2 pr-10 pl-3 text-base text-gray-900 placeholder-gray-400 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm">
                            <option value="boebwr">BoeBwr</option>
                            <option value="mibay">Mibay</option>
                            <option value="miba">Miba</option>
                            <option value="yaybay">Yaybay</option>
                        </select>
                        <svg class="pointer-events-none col-start-1 row-start-1 mr-2 h-5 w-5 self-center justify-self-end text-gray-500 sm:h-4 sm:w-4"
                             viewBox="0 0 16 16" fill="currentColor" aria-hidden="true" data-slot="icon">
                            <path fill-rule="evenodd"
                                  d="M4.22 6.22a.75.75 0 0 1 1.06 0L8 8.94l2.72-2.72a.75.75 0 1 1 1.06 1.06l-3.25 3.25a.75.75 0 0 1-1.06 0L4.22 7.28a.75.75 0 0 1 0-1.06Z"
                                  clip-rule="evenodd" />
                        </svg>
                    </div>
                </div>
            </div>

            <div>
                <label for="email" class="block text-sm font-medium text-white">Address</label>
                <div class="mt-2">
                    <input type="text" name="address" required
                           class="block w-full rounded-md border border-gray-300 bg-white px-3 py-2 text-gray-900  placeholder-gray-400 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm">
                </div>
            </div>

            <div>
                <label for="password" class="block text-sm font-medium text-white">Password</label>
                <div class="mt-2">
                    <input type="text" name="password" required
                           class="block w-full rounded-md border border-gray-300 px-3 py-2 bg-white text-base text-gray-900 placeholder-gray-400 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm">
                </div>
            </div>

            <div>
                <button type="submit"
                        class="flex w-full justify-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
                    Sign up
                </button>
            </div>
        </form>

        <p class="mt-10 text-center text-sm text-gray-500">
            Already have account?
            <a href="/Login/Index" class="font-semibold text-indigo-600 hover:text-indigo-500">login here.</a>
        </p>
    </div>
</section>